@model TagListViewModel
@{
    ViewData["Title"] = "Etiketler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Etiketler</h3>
<div class="container-fluid m-2">
    <div class="col-6 m-auto">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><div class="col-1">Id</div></th>
                    <th><div class="col-2">Etiket</div></th>
                    <th><div class="col-3">İşlemler</div></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var tag in Model.Tags)
                {
                <tr>
                    <td><div class="col">@tag.TagID</div></td>
                    <td><div class="col">@tag.TagName</div></td>
                    <td>
                        <div class="col">
                            <a href="/Tag/AdminUpdate/@tag.TagID" class="btn btn-warning">Güncelle</a>
                            <a href="/Tag/DeleteTag/@tag.TagID" class="btn btn-danger">Sil</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        @using (Html.BeginForm("AddTag", "Tag", FormMethod.Post))
        {
            <div class="container-fluid">

                <div class="form form-group font-weight-bolder  mt-3">
                    <div class="form-row">
                        <div class="col-form-label d-flex align-items-center col-1 font-weight-bold">Etiket :</div>

                        <div class="col">
                            @Html.TextBoxFor(t => t.Tag.TagName)
                        </div>
                    </div>
                    <div class="form-row">
                        <button class="btn btn-success px-5">Ekle</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
