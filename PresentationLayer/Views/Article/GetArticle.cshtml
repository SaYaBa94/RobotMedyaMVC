@model ArticleListViewModel
@{
    ViewData["Title"] = Model.Article.ArticleTitle + " - " + Model.Article.Category.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" id="main">
    <div class="col">
        <article class="card  mb-5 mt-1">
            <header class="card-header">
                <div class="d-flex justify-content-between" id="main-head-box">
                    <div id="left-box"></div>
                    <div id="center-box"><h1 class="car-title justify-content-center text-center text-primary" id="article-title">@Model.Article.ArticleTitle</h1></div>


                    <div class="text-right" id="right-box">
                        <span id="article-author"> @Model.Article.Author.AuthorName @Model.Article.Author.AuthorSurname</span>
                        <br /><time class="text-muted">@Model.Article.CreateDate.ToString("dd MMMM yyyy HH:mm:ss")</time>
                    </div>
                </div>
            </header>
            <div class="card-body" style="height:100%" id="article-text">
                @Html.Raw(Model.Article.ArticleBody)

            </div>
            <div class="card-footer" id="article-tags">

                @foreach (var tag in Model.ArticleTags)
                {
                    <a href="/Article/GetArticleList?id=@tag.Tag.TagID" class="btn btn-light btn-sm mb-1" id="@tag.Tag.TagName">#@tag.Tag.TagName</a>
                }
            </div>

        </article>
    </div>
</div>
<script>
    let el = document.getElementsByTagName('img');
    for (var i = 1; i < el.length; i++) {
        el[i].classList.add("img-fluid");
    }

    let video = document.getElementsByTagName('iframe');
    for (let i = 0; i < video.length; i++) {
        video[i].classList.add("img-fluid");
        let height = (video[i].width * 9 / 16)+"px";
        video[i].style.height = height;
            console.log(height);
        
    }
    console.log()
    
</script>


