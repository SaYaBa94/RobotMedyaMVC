@model CategoryListViewModel
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Kategoriler</h3>

<div class="container-fluid m-2">
    <div class="col-6 m-auto">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><div class="col">ID</div></th>
                    <th><div class="col">Kategori</div></th>
                    <th><div class="col">İşlemler</div></th>
                </tr>
            </thead>
            <tbody>



                @foreach (var category in Model.Categories)
                {
                <tr>
                    <td><div class="col">@category.CategoryID</div></td>
                    <td><div class="col">@category.CategoryName</div></td>
                    <td><div class="col">@category.CategoryType.CategoryTypeName</div></td>
                    <td>
                        <div class="col">
                            <a href="/Category/AdminUpdate/@category.CategoryID" class="btn btn-warning m-1">Güncelle</a>
                            <a href="/Category/DeleteCategory/@category.CategoryID" class="btn btn-danger m-1">Sil</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
        {
            <div class="container-fluid">

                <div class="form form-group font-weight-bolder  mt-3">
                    <div class="form-row">
                        <div class="col-form-label d-flex col-2 font-weight-bold">Kategori :</div>

                        <div class="col">
                            @Html.TextBoxFor(c => c.Category.CategoryName)
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-form-label d-flex align-items-center col-2">Kategori Tipi :</div>

                        <div class="col">
                            @Html.DropDownListFor(c => c.Category.CategoryTypeID, (List<SelectListItem>)ViewBag.kategoriTipleri)
                        </div>
                    </div>
                    <div class="form-row">
                        <button class="btn btn-success px-5 mb-5">Ekle</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
